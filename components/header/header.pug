-
  const headerLogo = {
    src: "img/logo.png",
    width: 148 ,
    height: 45,
    alt: "Логотип Crowd Marketing",
  };
  const headerLoginBtnText = "Вход";
  const headerSignUpBtnText = "Регистрация";
  const headerBurgerBtn = {
    src: "img/burger_btn.svg",
    width: 24,
    height: 24,
    alt: "Кнопка для открытия меню",
  }

mixin header()
  header.header
    img.header__logo(src=headerLogo.src width=headerLogo.width height=headerLogo.height alt=headerLogo.alt)
    nav.header__menu.main-menu.visually-hidden
      +main-menu()
    .header__auth-btns.visually-hidden
      button.header__login-btn.text-btn= headerLoginBtnText
      span.header__auth-delimiter.text-btn-delimiter= " / "
      button.header__sign-up-btn.text-btn= headerSignUpBtnText
    input.header__menu-btn(type="image" src=headerBurgerBtn.src width=headerBurgerBtn.width height=headerBurgerBtn.height alt=headerBurgerBtn.alt)