mixin page(title, relativePath = "")
  doctype html
  html(lang="ru")
    head
      meta(charset="utf-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      title= title
      link(rel="stylesheet", href = relativePath + "styles/reset.css")
      link(rel="stylesheet", href = relativePath + "styles/styles.css")
      link(rel="shortcut icon" href = relativePath + "img/favicon.ico" type="image/x-icon")
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&display=swap" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@500&display=swap" rel="stylesheet">
    body
      .wrapper
        +header()
        +description()
        //- +effect()
        //- +work-process()
        //- +security()
      script(src="js/script.js")